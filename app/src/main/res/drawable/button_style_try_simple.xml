<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#b1bcff"
                android:endColor="#a0a5ff"
                android:centerColor="#aac3ff"

                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#b1d2ec"/>
            <corners android:radius="3dp"/>
            <padding
                    android:left="2dp"
                    android:top="2dp"
                    android:right="2dp"
                    android:bottom="2dp" />
        </shape>
    </item>
</selector>