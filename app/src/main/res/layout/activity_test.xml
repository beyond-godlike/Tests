<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/activity_main"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              tools:context=".ui.TestActivity"
              android:weightSum="1">

<TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_weight="0.13"
        android:typeface="monospace"
        android:textSize="24sp"
        android:textColor="?android:attr/textColorAlertDialogListItem"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:gravity="start"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:minWidth="64dp"
            android:minHeight="36dp"
            android:id="@+id/buttonAnswer1"
            android:layout_weight="0.13"
            android:textAppearance="@android:style/TextAppearance"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_style_try"
            android:textSize="18sp"
            tools:ignore="HardcodedText"
            tools:text="@string/button"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:minWidth="64dp"
            android:minHeight="36dp"
            android:id="@+id/buttonAnswer2"
            android:layout_weight="0.13"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_style_try"
            tools:ignore="HardcodedText"
            tools:text="@string/button"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:minWidth="64dp"
            android:minHeight="36dp"
            android:id="@+id/buttonAnswer3"
            android:layout_weight="0.13"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="18sp"
            android:background="@drawable/button_style_try"
            android:textAlignment="center"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tools:ignore="UnusedAttribute"
            tools:text="@string/button"/>

    <Button
            android:text="@string/buttonAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:minWidth="64dp"
            android:minHeight="36dp"
            android:id="@+id/buttonAnswer4"
            android:layout_weight="0.13"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_style_try"/>

<Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" />

    <Button
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:minWidth="64dp"
            android:minHeight="36dp"
            android:id="@+id/buttonNext"
            android:layout_weight="0.13"
            android:textAppearance="@android:style/TextAppearance"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_style_try"/>
</LinearLayout>